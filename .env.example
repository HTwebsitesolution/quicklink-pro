# QuickLink Pro - Environment Configuration
# Copy this file to .env and update with your actual values

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/quicklink-pro?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=production

# Domain Configuration (UPDATED WITH YOUR DOMAIN)
FRONTEND_URL=https://quicklinkpro.io
BACKEND_URL=https://quicklinkpro.io
BASE_URL=https://quicklinkpro.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=https://quicklinkpro.io

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_TRACKING_ID

# Database Settings
DB_NAME=quicklink-pro
DB_COLLECTION_LINKS=links
DB_COLLECTION_ANALYTICS=analytics

# QR Code Configuration
QR_CODE_SIZE=200
QR_CODE_MARGIN=2

# URL Validation
MAX_URL_LENGTH=2048
CUSTOM_ALIAS_MIN_LENGTH=3
CUSTOM_ALIAS_MAX_LENGTH=50

# Link Expiration
DEFAULT_EXPIRATION_DAYS=365
MAX_EXPIRATION_DAYS=3650
